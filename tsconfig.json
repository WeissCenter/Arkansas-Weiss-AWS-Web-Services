{
  "compilerOptions": {
    "strict": false,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "module": "commonjs",
    "types": ["node"],
    "lib": ["es2020", "dom", "ESNext"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@adapt/types": ["libs/types/src/index.ts"]
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "cdk.out"
  ],
  "include": ["libs/types/src/index.ts"]
}
